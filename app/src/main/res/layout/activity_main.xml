<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/phoneNumberList" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPhoneNumberPathFile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPhoneNumberListPath"
        android:paddingTop="10dp"
        android:layout_below="@+id/tvPhoneNumberPathFile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imgButtonBrowse"
        android:layout_toStartOf="@+id/imgButtonBrowse" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgButtonBrowse"
        android:layout_alignBottom="@+id/tvPhoneNumberListPath"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvPhoneNumberListPath" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/messageText"
        android:id="@+id/tvMessage"
        android:layout_below="@+id/tvPhoneNumberListPath"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editMessageText"
        android:layout_below="@+id/tvMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minLines="4"
        android:paddingTop="10dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/editMessageText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="15dp"
        android:indeterminate="false"
        style="@android:style/Widget.ProgressBar.Horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgButtonSend"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp"
        android:clickable="false"
        android:layout_alignBottom="@+id/imgButtonPause" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgButtonPause"
        android:paddingTop="15dp"
        android:clickable="false"
        android:layout_below="@+id/progressBar"
        android:layout_toRightOf="@+id/imgButtonSend"
        android:layout_toEndOf="@+id/imgButtonSend" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgButtonStop"
        android:paddingTop="15dp"
        android:clickable="false"
        android:layout_below="@+id/progressBar"
        android:layout_toRightOf="@+id/tvPhoneNumberListPath"
        android:layout_toEndOf="@+id/tvPhoneNumberListPath" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPhoneNumCount"
        android:layout_above="@+id/tvPhoneNumberListPath"
        android:layout_toRightOf="@+id/tvPhoneNumberPathFile"
        android:layout_toEndOf="@+id/tvPhoneNumberPathFile" />

</RelativeLayout>
